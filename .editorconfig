root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.java]
indent_size = 4
max_line_length = 80

[*.ts]
quote_type = single
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.html]
indent_size = 2

[*.css]
indent_size = 2
